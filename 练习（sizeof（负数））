#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>


int i ;//全局变量未初始化，默认为0

int main()
{
	i--;
	//i==-1
	//10000000000000000000000000000001 - 原码
	//11111111111111111111111111111110 - 反码
	//11111111111111111111111111111111 - 补码
	//负数以补码的的形式存储在内存空间中
	if (i < sizeof(i))
		//sizeof（）- 计算变量/类型所占内存的大小一定 >= 0 ,且为无符号数
		//因此 -1 的补码转变为无符号正整数，正整数补码、原码、反码一致，即变为相当大的一个数
		//因此 打印 >
	{
		printf("<");
	}
	else
		printf(">");
	//打印结果为>
	return 0;
}
